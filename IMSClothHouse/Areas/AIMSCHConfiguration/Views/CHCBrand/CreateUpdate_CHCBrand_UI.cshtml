@using SharedUI.Models.Enums
@{
    Layout = "LayoutOne";
}
<script src="~/js/aimschconfiguration/scripts/chcbrand/createupdate_chcbrand_ui.js"></script>
<div class="container-fluid py-2">
    <div class="d-flex justify-content-between align-items-center mb-4 border-bottom pb-3">
        <div>
            <h5 class="fw-bold mb-0">@ViewBag.DisplayName</h5>
            @{
                string message = "Fill in the details to create a new system record.";
                <p class="text-muted mb-0 small">@message</p>
            }
        </div>
        <div>
            @{
                if (ViewBag.OperationType == nameof(OperationType.INSERT_DATA_INTO_DB))
                {
                    <button type="button" id="ButtonSaveData" class="btn btn-primary btn-sm px-4 shadow-sm">
                        <i class="fa-solid fa-cloud-arrow-up me-1"></i> Save Brand
                    </button>
                }
                else if (ViewBag.OperationType == nameof(OperationType.UPDATE_DATA_INTO_DB))
                {
                    <button type="button" id="ButtonUpdateData" class="btn btn-success btn-sm px-4 shadow-sm">
                        <i class="fa-solid fa-cloud-arrow-up me-1"></i> Update Brand
                    </button>
                }
            }
        </div>
    </div>
<form id="CBrandForm">
        @{
            if (ViewBag.OperationType == nameof(OperationType.UPDATE_DATA_INTO_DB))
            {
                
            }
        }
        <div class="col-12 mt-4">
            <div class="bg-light p-2 rounded-2 border-start border-primary border-4">
                <span class="fw-bold text-primary small"><i class="fa-solid fa-user me-2"></i> BRAND INFORMATION</span>
            </div>
        </div>
        <div class="row mb-0">
            <div class="col-sm-12 col-md-6">
                <div class="form-group">
                    @Html.Label("TextBoxDescription", "Description", new { @class = "col-form-label" })
                        @Html.TextBox("Description", null, new { @class = "form-control form-control-sm", placeholder = "Please Enter Description Here!", @id = "TextBoxDescription" })
                </div>
            </div>
            <div class="col-sm-12 col-md-6">
                <div class="form-group">
                    @Html.Label("TextBoxFocalPerson", "Focal Person", new { @class = "col-form-label" })
                    @Html.TextBox("FocalPerson", null, new { @class = "form-control form-control-sm", placeholder = "Please Enter Focal Person Here!", @id = "TextBoxFocalPerson" })
                </div>
            </div>
        </div>
        <div class="row mb-0">
            <div class="col-sm-12 col-md-3">
                <div class="form-group">
                    @Html.Label("TextBoxContact", "Contact", new { @class = "col-form-label" })
                    @Html.TextBox("Contact", null, new { @class = "form-control form-control-sm contact", placeholder = "Please Enter Contact Here!", @id = "TextBoxContact" })
                </div>
            </div>
            <div class="col-sm-12 col-md-3">
                <div class="form-group">
                    @Html.Label("TextBoxEmail", "Email", new { @class = "col-form-label" })
                    @Html.TextBox("Email", null, new { @class = "form-control form-control-sm email", placeholder = "Please Enter Email Here!", @id = "TextBoxEmail" })
                </div>
            </div>
            <div class="col-sm-12 col-md-6">
                <div class="form-group">
                    @Html.Label("TextBoxAddress", "Address", new { @class = "col-form-label" })
                    @Html.TextArea("Address", null, new { @class = "form-control form-control-sm", placeholder = "Please Enter Address Here!", @id = "TextBoxAddress", rows = 3 })
                </div>
            </div>
        </div>
</form>
</div>